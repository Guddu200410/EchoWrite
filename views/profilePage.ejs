                </button>
            </div>

            <div id="userPostContainer">
                <div id="totalCount">
                    <p>Total Post:</p>
                    <h2 id="postCount"></h2>
                </div>

                <!-- Add Post section -->
                <div id="postCardContainers">
                    <div class="profilepostcard">
                        <span class="card__title">POST</span>
                        <p class="card__content">

                        </p>
                        <form class="card__form">
                            <a class="card__button">READ</a>
                        </form>
                    </div>
                </div>


                <script src="/profile.js"></script>
